{
    "$schema": "https://opencode.ai/config.json",
    "autoupdate": false,
    "disabled_providers": [
        "opencode"
    ],
    "tools": {
        "lsp": true
    },
    "permission": {
        "edit": "ask"
    },
    "lsp": {
        "clojure-lsp": {
            "command": [
                "/Users/vjheya862/.local/share/nvim/mason/bin/clojure-lsp"
            ],
            "extensions": [
                ".clj",
                ".cljs",
                ".cljc",
                ".edn"
            ]
        }
    },
    "mcp": {
        "svelte": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@sveltejs/mcp"
            ],
            "enabled": false
        }
    },
    "provider": {
        "ollama": {
            "npm": "@ai-sdk/openai-compatible",
            "name": "Ollama (local)",
            "options": {
                "baseURL": "http://localhost:11434/v1"
            },
            "models": {
                "local": {
                    "name": "Mistral 3 8B params",
                    "id": "ministral-3"
                }
            }
        }
    }
}
